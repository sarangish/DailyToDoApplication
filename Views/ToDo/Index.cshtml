<!DOCTYPE html>
<html>
<head>
    <title>To-Do List</title>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            font-weight: bold;
            padding: 20px;
        }

        .center {
            text-align: center;
        }

        .add-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #28a745;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .add-button:hover {
                background-color: darkgreen;
            }

        table {
            width: 90%; /* Adjusted width of the table */
            border-collapse: collapse;
            margin-top: 20px;
            margin-left: auto; /* Center the table */
            margin-right: auto; /* Center the table */
            padding-left: 10px;
            padding-right: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 7px;
            text-align: left;
        }

        th {
            background-color: lightgreen
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        td.description {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        td.actions {
            text-align: center;
        }

        .edit-button {
            padding: 5px 10px;
            margin-right: 5px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            text-decoration: none;
        }

        .delete-button {
            padding: 5px 10px;
            margin-right: 5px;
            background-color: indianred;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            text-decoration: none;
        }

        .edit-button:hover {
            background-color: darkblue;
        }

        .delete-button:hover {
            background-color: darkred;
        }

        .red-text {
            color: red;
        }

        p {
            color: #666;
        }
    </style>
</head>
<body>

    <div class="center">
        <a href="@Url.Action("Add", "ToDo")" class="add-button">Add New Item</a>
    </div>

    @if (Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Time Left</th> <!-- New column -->
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = Model.Count - 1; i >= 0; i--)
                {
                    var item = Model[i];
                    <tr>
                        <td class="description">@item.Description</td>
                        <td>@item.DueDate.ToString("dd MMMM yyyy")</td> <!-- Format Due Date -->
                        <td class="@((item.TimeLeft.TotalHours <= 1 && item.TimeLeft.TotalHours > 0) || item.TimeLeft.TotalSeconds <= 0 ? "red-text" : "")">@((item.TimeLeft.TotalSeconds > 0) ? $"{item.TimeLeft.Days} days, {item.TimeLeft.Hours} hours, {item.TimeLeft.Minutes} minutes" : "00:00:00")</td> <!-- Display time left -->
                        <td class="actions"><a href="@Url.Action("Edit", "ToDo", new { id = item.Id })" class="edit-button">Edit</a></td>
                        <td class="actions"><a href="@Url.Action("Delete", "ToDo", new { id = item.Id })" class="delete-button">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No to-do items found.</p>
    }

</body>
</html>
